@model Plethora.Models.Articles

@{
    ViewData["Title"] = "Article Info";
}

<div>
    <h4>@Html.DisplayFor(model => model.ArticleType.Title) Articles</h4>
    <hr />

    <dl class="row">
        <dd class="col-sm-12">
            <h1>
            @Html.DisplayFor(model => model.Title)
            </h1>
        </dd>

        <dd class="col-sm-12">
            <h5>
           By @Html.DisplayFor(model => model.ByLine)
            </h5>
        </dd>

        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dd class="col-sm-12 mt-4 mb-4">
            <img src="\Assets\Articles\@Html.DisplayFor(model => model.ArticleId)\main.jpg" class="img-fluid" />
        </dd>

        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.BodyCopy)
        </dd>

    </dl>

    <div>
        <a asp-action="List">Back to List</a>
    </div>

    
</div>

